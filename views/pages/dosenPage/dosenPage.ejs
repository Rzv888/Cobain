<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Buka Rekrutmen</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="font-sans bg-gray-100">
    <div class="flex h-screen">
      <!-- Sidebar -->
      <aside class="flex flex-col text-white bg-gray-900 w-72">
        <div class="flex items-center justify-center p-6">
          <img src="img/logoSirekas.png" class="w-32" />
        </div>

        <nav class="flex-1 px-4">
          <!-- Home -->
          <a href="#" class="flex items-center px-4 py-3 space-x-2 rounded">
            <img src="img/iconHome.svg" />
            <span>Home</span>
          </a>

          <!-- Manajemen Rekrutmen -->
          <div class="mt-4">
            <button
              id="toggleRecruitment"
              class="flex items-center justify-between w-full px-4 py-3 text-left rounded"
            >
              <img
                src="img/icon3Layers.svg"
                class="w-6 h-6 brightness-0 invert"
              />
              <span>Manajemen Rekrutmen</span>
              <span id="arrow">▼</span>
            </button>

            <!-- Submenu -->
            <div id="rekrutmenMenu" class="hidden mt-2 ml-6">
              <a href="#" class="flex items-center px-4 py-3 space-x-3 rounded">
                <img
                  src="img/iconBukaRekrutmen.svg"
                  class="w-6 h-6 brightness-0 invert"
                />
                <span>Buka Rekrutmen</span>
              </a>
              <a
                href="#"
                class="flex items-center px-4 py-3 mt-2 space-x-3 rounded"
              >
                <img src="img/iconRekrutmenSaya.svg" class="w-6 h-6" />
                <span>Rekrutmen Saya</span>
              </a>
              <a
                href="#"
                class="flex items-center px-4 py-3 mt-2 space-x-3 rounded"
              >
                <img src="img/iconUsers.svg" class="w-6 h-6" />
                <span>List Pelamar</span>
              </a>
            </div>
          </div>
        </nav>

        <!-- Profile & Logout -->
        <div
          class="flex items-center justify-between p-4 border-t border-gray-700"
        >
          <div class="flex items-center">
            <img src="/images/profile.png" class="w-10 h-10 rounded-full" />
            <div class="ml-3">
              <p class="font-semibold">Tatang Sutarma</p>
              <p class="text-sm text-gray-400">Dosen</p>
            </div>
          </div>
          <a href="#" class="p-2 transition rounded-full hover:bg-gray-800">
            <img src="img/iconLogout.svg" class="w-6 h-6" />
          </a>
        </div>
      </aside>

      //main
    </div>

    <style>
      .active img {
        filter: brightness(0) !important;
      }
    </style>

    <script>
      document
        .getElementById("toggleRecruitment")
        .addEventListener("click", function () {
          const menu = document.getElementById("rekrutmenMenu");
          const arrow = document.getElementById("arrow");

          // Toggle class hidden
          menu.classList.toggle("hidden");

          // Ubah arah panah
          if (menu.classList.contains("hidden")) {
            arrow.innerHTML = "▼";
          } else {
            arrow.innerHTML = "▲";
          }
        });

      document.addEventListener("DOMContentLoaded", function () {
        const links = document.querySelectorAll("nav a");
        links.forEach((link) => {
          link.addEventListener("click", function () {
            // Hapus kelas aktif dari semua menu
            links.forEach((l) =>
              l.classList.remove("bg-white", "text-gray-900")
            );

            // Tambahkan kelas aktif ke menu yang diklik
            this.classList.add("bg-white", "text-gray-900");
          });
        });
      });

      document.addEventListener("DOMContentLoaded", function () {
        const menuItems = document.querySelectorAll("aside nav a");

        menuItems.forEach((item) => {
          item.addEventListener("click", function () {
            // Hapus kelas active dari semua menu
            menuItems.forEach((menu) => menu.classList.remove("active"));

            // Tambahkan kelas active ke menu yang diklik
            this.classList.add("active");
          });
        });
      });
    </script>
  </body>
</html>
